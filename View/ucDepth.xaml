        <!--ENDS BIDS-->
        <!--ASKS
        <DataGrid ItemsSource="{Binding Asks, Mode=OneWay}" 
                                     Style="{StaticResource MaterialDesignDataGrid}" 
                                     Grid.Column="1" 
                                     FontSize="9" FontFamily="Verdana" FontWeight="UltraLight" 
                                     AutoGenerateColumns="False" 
                                     SelectionUnit="Cell" 
