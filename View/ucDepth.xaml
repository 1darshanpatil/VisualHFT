            </Grid>

            <ItemsControl ItemsSource="{Binding Path=Asks, Mode=OneWay}" Grid.Row="1" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.Resources>
